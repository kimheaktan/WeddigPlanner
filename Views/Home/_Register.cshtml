@model User
@{
    ViewData["Title"] = "Register";
}


<div class="text-center">
    <h3 class="display-4 text-light pr-4">Register</h3>
</div>

<form asp-controller="Home" asp-action="Register" class="smallFormReg" style="width:50%">

  <div class="form-group">
    <label asp-for="FirstName"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="FirstName"></span>
    <input class="form-control" asp-for="FirstName">
  </div>
  
  <div class="form-group">
    <label asp-for="LastName"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="LastName"></span>
    <input class="form-control" asp-for="LastName">
  </div>
          
  <div class="form-group">
    <label asp-for="Email"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Email"></span>
    <input class="form-control" asp-for="Email">
  </div>
          
  <div class="form-group">
    <label asp-for="Password"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="Password"></span>
    <input class="form-control" asp-for="Password">
  </div>

  <div class="form-group">
    <label asp-for="ConfirmPassword"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="ConfirmPassword"></span>
    <input class="form-control" asp-for="ConfirmPassword">
  </div>
  
  <button class="btn btn-info" type="submit">Register</button><br>
  <a asp-action="_Login" asp-controller="Home">Already registered? Login Here!</a>
</form>

