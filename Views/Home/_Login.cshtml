@model LoginUser
@{
    ViewData["Title"] = "Login";
    <link rel="stylesheet" href="~/css/Weddings.css">

}
    <h2 class="display-4 text-light WP" >Wedding Planner</h2>



<div style="width:30%" class="smallForm">
  <div class="card border-0 shadow my-5">
    <div class="card-body p-5">
<div class="text-center">
    <h3 class="display-4">Login</h3>
</div>

<form asp-controller="Home" asp-action="Login">

  <div class="form-group">
    <label asp-for="LoginEmail"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="LoginEmail"></span>
    <input class="form-control" asp-for="LoginEmail">
  </div>
          
  <div class="form-group">
    <label asp-for="LoginPassword"></label>
    <span class="text-danger font-weight-bold" asp-validation-for="LoginPassword"></span>
    <input class="form-control" asp-for="LoginPassword">
  </div>

  
  <button class="btn btn-info" type="submit">Login</button>
</form>
<a asp-action="Index" asp-controller="Home">Need to Register? Register here!</a>

